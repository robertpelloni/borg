{
  "name": "aios-vscode",
  "displayName": "AIOS Plugin",
  "version": "0.2.0",
  "description": "Connect VS Code to AIOS Hub for AI agent orchestration, memory management, and tool invocation",
  "publisher": "aios",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "Machine Learning"],
  "keywords": ["ai", "agents", "mcp", "orchestration", "memory"],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aios.connect",
        "title": "AIOS: Connect to Hub"
      },
      {
        "command": "aios.disconnect",
        "title": "AIOS: Disconnect from Hub"
      },
      {
        "command": "aios.showStatus",
        "title": "AIOS: Show Hub Status"
      },
      {
        "command": "aios.runAgent",
        "title": "AIOS: Run Agent"
      },
      {
        "command": "aios.searchMemory",
        "title": "AIOS: Search Memory"
      },
      {
        "command": "aios.rememberSelection",
        "title": "AIOS: Remember Selection"
      },
      {
        "command": "aios.listTools",
        "title": "AIOS: List Tools"
      },
      {
        "command": "aios.invokeTool",
        "title": "AIOS: Invoke Tool"
      },
      {
        "command": "aios.openDashboard",
        "title": "AIOS: Open Dashboard"
      },
{
      "command": "aios.showLogs",
      "title": "AIOS: Show Logs"
    },
    {
      "command": "aios.startDebate",
      "title": "AIOS: Start Council Debate"
    },
    {
      "command": "aios.viewAnalytics",
      "title": "AIOS: View Supervisor Analytics"
    },
    {
      "command": "aios.listDebateTemplates",
      "title": "AIOS: List Debate Templates"
    },
    {
      "command": "aios.architectMode",
      "title": "AIOS: Architect Mode (Two-Model)"
    }
    ],
    "configuration": {
      "title": "AIOS",
      "properties": {
        "aios.hubUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "URL of the AIOS Hub server"
        },
        "aios.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authenticated Hub access"
        },
        "aios.autoConnect": {
          "type": "boolean",
          "default": false,
          "description": "Automatically connect to Hub on startup"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "aios.rememberSelection",
          "when": "editorHasSelection",
          "group": "aios"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "echo \"No tests specified for vscode\" && exit 0"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4"
  }
}
