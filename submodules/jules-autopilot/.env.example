# ===========================================
# Jules UI Environment Configuration
# ===========================================

# ----- Authentication -----

# NextAuth secret (generate with: openssl rand -base64 32)
AUTH_SECRET=

# NextAuth URL (your app's base URL)
AUTH_URL=http://localhost:3000

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Legacy session secret (for API key auth)
SESSION_SECRET=

# ----- Database -----

# SQLite database URL (default: file:./prisma/dev.db)
# For Turso: libsql://your-db.turso.io
DATABASE_URL=file:./prisma/dev.db
TURSO_AUTH_TOKEN=

# ----- AI Providers (for Session Keeper) -----

# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Google Gemini
GOOGLE_GENERATIVE_AI_API_KEY=

# OpenRouter (alternative provider)
OPENROUTER_API_KEY=

# ----- Terminal Server -----

# WebSocket URL for terminal (auto-detected if not set)
# NEXT_PUBLIC_TERMINAL_WS_URL=ws://localhost:8081

# Set to true to hide terminal button
# NEXT_PUBLIC_DISABLE_TERMINAL=true

# Workspace directory for terminal
WORKSPACE_DIR=/workspace

# ----- Optional -----

# App version (auto-read from VERSION.md)
# NEXT_PUBLIC_APP_VERSION=0.8.6
