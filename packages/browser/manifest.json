{
  "name": "Super AI Browser Extension",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Connects Chrome to Super AI Hub",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_popup": "public/popup.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ]
}
